
  <fieldset>
    <legend>Add Snippet!</legend>
    <label for="title">Title: </label>
    <input type="text" id="title" name="title" value="{{snippet.title}}" placeholder="Enter Title">
    <label for="language">Language: </label>
    <input type="text" id="language" name="language" value="{{snippet.language}}" placeholder="Enter Language">
    <label for="body">Enter Code: </label>
    <textarea name="body" id="body" rows="8" cols="80" value="{{snippet.body}}"placeholder="Enter Code"></textarea>
    <label for="tag">Add Tag: </label>
    <input type="text" id="tag" name="tag" value="" placeholder="Enter Tag">

    <input type="submit" name="submit" value="Add Snippet">
  </fieldset>
