<div class="nav">
  <a href="/login">Login</a>
  <a href="/signup">Sign Up</a>
</div>

<form class="signup" action="/signup" method="post">
  <fieldset>
    <legend>Sign up!</legend>
    <p class="error">{{emailError}}</p>
    <div class="input">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" value="{{user.email}}" placeholder="Enter Email Address">
    </div>
    <p class="error">{{usernameError}}</p>
    <div class="input">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" value="{{user.username}}" placeholder="Enter Username">
    </div>
    <p class="error">{{passwordError}}</p>
    <div class="input">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" value="" placeholder="Enter Password">
    </div>

    <div class="input">
    <label for="confirmPassword">Confirm Password</label>
    <input type="password" id="confirmPassword" name="confirmPassword" value="" placeholder="Confirm Password">
    </div>

    <input type="submit" name="signup" value="Sign Up!">
  </fieldset>
</form>
